  <% if book.favorited_by?(current_user) %>
    <p><%= link_to book_favorites_path(book), class: "info", method: :delete, remote: true do %>
      <i class="fas fa-heart" style="color: red;"><%= book.favorites.count%></i>
    	<% end %>
    </p>
  <% else %>
    <p>
    	<%= link_to book_favorites_path(book), class: "danger", method: :post, remote: true do %>
        <i class="fas fa-heart" style="color: blue;"><%= book.favorites.count%></i>
      <% end %>
    </p>
  <% end %>